{
	"name": "slevomat/async-smtp-mailer",
	"description": "Asynchronous SMTP mailer",
	"homepage": "http://github.com/slevomat/async-smtp-mailer",
	"license": ["proprietary"],
	"authors": [
		{
			"name": "Slevomat.cz, s.r.o.",
			"email": "it@slevomat.cz",
			"homepage": "http://www.slevomat.cz"
		}
	],
	"require": {
		"php": "^7.4.0 || ^8.0.0",
		"nette/di": "^3.1.1",
		"nette/mail": "^3.1.10 || ^4.0.0",
		"psr/log": "^1.1.4 || ^2.0.0 || ^3.0.0",
		"react/event-loop": "^1.3.0",
		"react/promise": "^3.0.0",
		"react/promise-timer": "^1.10.0",
		"react/socket": "^1.12.0"
	},
	"require-dev": {
		"ext-imap": "*",
		"php-parallel-lint/php-parallel-lint": "^1.3.2",
		"phing/phing": "^3.0.1",
		"phpstan/phpstan": "^2.1.19",
		"phpstan/phpstan-phpunit": "^2.0.7",
		"phpstan/phpstan-strict-rules": "^2.0.6",
		"phpunit/phpunit": "^11.5.27",
		"slevomat/coding-standard": "^8.19.1",
		"spell-checker/spell-checker": "^v0.3.24",
		"spell-checker/dictionary-en": "^0.1.1",
		"squizlabs/php_codesniffer": "^3.13.2"
	},
	"config": {
		"bin-dir": "bin",
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"psr-4": {"AsyncConnection\\": ["src/"]}
	},
	"autoload-dev": {
		"classmap": ["tests"]
	},
	"prefer-stable": true
}

